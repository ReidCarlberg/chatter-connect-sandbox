<!DOCTYPE html>
<html>
<head>
  <title>Chatter Connect Sandbox</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<h1>Chatter Connect Sandbox</h1>
	<p>
		<%= link_to('Home', '/') %> |
		<% if !user_signed_in? %>
			<%= link_to('Login', signin_path) %>
		<% else %>
			<%= link_to(session['user_info']['name'], '/social/raw_users_me') %> |
			<%= link_to('Session Info', '/user/index') %> |
			<%= link_to('Logout', signout_path) %>
		<% end %>
	</p>

<%= yield %>

</body>
</html>
