<%= form_tag({:controller => "social", :action => "update_status"}, :method => "post") do %>
   <%= text_field_tag "new_status" %>
   <%= submit_tag 'Share' %>
<% end %>

<% @items["items"].each do |current| %>
	<p> 
		<% if current["parent"]["photo"] %>
			<img src="<%= current["parent"]["photo"]["smallPhotoUrl"] %>?oauth_token=<%= ENV['sfdc_token'] %>" />
		<% end %>
		<%= link_to(current["id"],'/social/raw_feed_item/'+current["id"]) %>,
		<%= current["body"]["text"] %>
		<%= current["parent"]["name"] %>
	</p>
<% end %>


